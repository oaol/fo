<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <Property name="LOG_PATTERN">
            %X{cus_id} %highlight{%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%t] %c : %m%n%ex}{ERROR=red, WARN=blue, INFO=gray,
            DEBUG=green}
        </Property>
        <Property name="LOG_LOCATION">
            /logs/qrpusr/java/15011
        </Property>
    </Properties>
    <Loggers>
        <Root level="info">
            <!--console级别,线上不要-->
            <AppenderRef ref="Console"/>
            <!--info级别日志-->
            <AppenderRef ref="InfoRollingFile"/>
            <!--warn级别日志-->
            <AppenderRef ref="WarnRollingFile"/>
            <!--error级别日志-->
            <AppenderRef ref="ErrorRollingFile"/>
        </Root>

    </Loggers>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <RollingFile name="InfoRollingFile" fileName="${LOG_LOCATION}/info.log"
                     filePattern="${LOG_LOCATION}/info.%d{yyyy-MM-dd-HH}.log">
            <PatternLayout>
                <Pattern>${LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>

        <RollingFile name="WarnRollingFile" fileName="${LOG_LOCATION}/warn.log"
                     filePattern="${LOG_LOCATION}/warn.%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>${LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
        </RollingFile>

        <RollingFile name="ErrorRollingFile" fileName="${LOG_LOCATION}/error.log"
                     filePattern="${LOG_LOCATION}/error.log">
            <PatternLayout>
                <Pattern>${LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="1 GB"/>
            </Policies>
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
        </RollingFile>

    </Appenders>
</Configuration>